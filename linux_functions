theia_run(){
    echo "starting theia"
    p=$PWD
    ls 
    if [ -d .venv ]; then
        echo "activating virtual env on .venv"
        source .venv/bin/activate
    elif [ -d venv ]; then
        echo "activating virtual env on venv"
        source venv/bin/activate
    else 
        echo "no hay venv"
    fi
    cd /theia
    n 8 
    yarn theia start $p -hostname 0.0.0.0 
    deactivate
    cd $p   
}