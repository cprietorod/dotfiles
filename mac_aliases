alias dev_zsh="$GCLOUD_COMMAND zsh"
alias dev_nvim="$GCLOUD_COMMAND nvim"
alias vscode="docker stop vscode || echo 'no hay docker' ; $GCLOUD1 -d --name vscode $GCLOUD2 code-server -H -N -e /root/.vsextentions ; /Applications/Google\ Chrome.app/Contents/MacOS/Google\ Chrome --app=http://localhost:8443 --profile-directory=\"Profile 4\" "
