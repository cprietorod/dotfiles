{
  "name": "yaml-language-server",
  "description": "YAML language server",
  "version": "1.0.0",
  "author": "Gorkem Ercan (Red Hat)",
  "license": "MIT",
  "contributors": [
    {
      "name": "Joshua Pinkney",
      "email": "joshpinkney@gmail.com"
    },
    {
      "name": "Google LLC"
    }
  ],
  "engines": {
    "node": "*"
  },
  "main": "../../dist/server.js",
  "keywords": [
    "yaml",
    "LSP"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/redhat-developer/yaml-language-server.git"
  },
  "dependencies": {
    "@kubernetes/client-node": "^0.8.1",
    "async-lock": "^1.2.0",
    "bufferutil": "^4.0.1",
    "cache-manager": "^2.9.0",
    "fs-extra": "^7.0.1",
    "glob": "^7.1.2",
    "js-yaml": "^3.12.0",
    "jsonc-parser": "^1.0.3",
    "moment": "^2.24.0",
    "prettier": "^1.15.2",
    "request-light": "^0.2.3",
    "utf-8-validate": "^5.0.2",
    "vscode-json-languageservice": "3.0.12",
    "vscode-languageserver": "^4.0.0",
    "vscode-languageserver-types": "^3.6.1",
    "vscode-nls": "^3.2.2",
    "vscode-uri": "^1.0.6",
    "yaml-ast-parser": "0.0.40"
  },
  "devDependencies": {
    "@types/async-lock": "^1.1.1",
    "@types/cache-manager": "^1.2.7",
    "@types/fs-extra": "^5.0.5",
    "@types/glob": "^7.1.1",
    "@types/js-yaml": "^3.12.0",
    "@types/moment": "^2.13.0",
    "@types/prettier": "^1.16.1",
    "cross-env": "^5.2.0",
    "gts": "^0.9.0",
    "mocha": "6.0.2",
    "source-map-support": "^0.5.4",
    "ts-loader": "^5.3.3",
    "ts-node": "^5.0.1",
    "typemoq": "^2.1.0",
    "typescript": "~3.2.4",
    "webpack": "^4.29.6",
    "webpack-cli": "^3.3.0"
  },
  "scripts": {
    "compile": "installServerIntoExtension ../../dist ./package.json ./tsconfig.json && webpack --mode none",
    "compile-prod": "npm run compile && cross-env NODE_OPTIONS=--max_old_space_size=8192 webpack --mode production --devtool none",
    "test-compile": "installServerIntoExtension ../../dist ./package.json ./tsconfig.json && tsc -p .",
    "watch": "webpack --mode none",
    "test": "node ./node_modules/mocha/bin/mocha --color --require ts-node/register --ui bdd ./test/*.test.ts",
    "check": "gts check",
    "clean": "gts clean",
    "fix": "gts fix",
    "prepare": "npm run compile",
    "pretest": "npm run test-compile",
    "posttest": "npm run check"
  }
}
